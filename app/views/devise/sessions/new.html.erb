<div class= "signin_page">
  
  <div class = "signinHeader">
    <p>ログイン</p>
  </div>

  <div class = 'container'>
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <table>

      <div class="form-group col-xs-4">
      <tr>
        <th><label><span class = "must">必須</span></label></th>
        <td><%= f.email_field :email, class: "form-control-sm", placeholder: "メールアドレス",autocomplete: "email" %></td>
      </tr>
      </div>
    
      <div class="form-group col-xs-4">
      <tr>
        <th><label><span class = "must">必須</span></label></th>
        <td><%= f.password_field :password, class: "form-control-sm", placeholder: "パスワード", autocomplete: "new-password" %></td>
      </tr>
      </div>
    
    </table>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary btn-block login_button" %>
    </div>
    
    <%= render "devise/shared/links" %>

  </div>
</div>
<% end %>

