<div class="container m-5">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 form-wrapper">

    <table>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <tr>
        <th><h4 class="account-form-title mt-5">アカウント編集</h4></th>
      </tr>
        
        <div class="account-whole-form">

        <tr>
          <th class="account-label">設定中のアイコン画像</th>
          <td class="user-icon-setting">
          <% if current_user.user_image? %>
            <%= image_tag current_user.user_image.url, class:"user-icon", alt: "ユーザーアイコン" %>
          <% else %>
            <%= image_tag "/assets/default.png", class:"user-icon", alt:"ユーザーアイコン" %>
          <% end %>
          </td>
        </tr>

        <tr>
          <div class = 'form-group'>
            <th><%= f.label :user_image, "アイコン画像", class: "account-label" %> <span class = "must">必須</span></th>
            <td><%= f.file_field :user_image, class: "account-form"%></td>
          </div>
        </tr>

        <tr>
          <div class = 'form-group'>
            <th><%= f.label :name, "ユーザー名", class: "account-label" %> <span class = "must">必須</span></th>
            <td><%= f.text_field :name, autofocus: true, class: "form-control account-form", placeholder: "名前を入力" %></td>
          </div>
        </tr>

        <tr>
          <div class = 'form-group'>
            <th><%= f.label :user_introduction, "自己紹介", class: "account-label" %> <span class = "must">必須</span></th>
            <td><%= f.text_area :user_introduction, autofocus: true, class: "form-control account-form", placeholder: "自己紹介を入力" %></td>
          </div>
        </tr>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <tr>
          <div class = 'form-group'>
            <th><%= f.label :email, "メールアドレス", class: "account-label" %> <span class = "must">必須</span></th>
            <td><%= f.email_field :email, autocomplete: "email", class: "form-control account-form", placeholder: "登録したメールアドレスを入力" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :current_password, "現在のパスワード", class: "account-label" %> <span class = "must">必須</span></th>
            <td><%= f.password_field :current_password, autocomplete: "current-password", class: "form-control account-form", placeholder: "現在のパスワードを入力" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :password, "変更後パスワード" , class: "account-label"%></th>
            <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control account-form", placeholder: "※ 変更する場合のみ入力" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :password_confirmation, "パスワード確認用", class: "account-label" %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control account-form", placeholder: "※ 変更する場合のみ入力" %></td>
          </div>
        </tr>

      <tr>
        <th><%= f.submit "更新", class: "btn btn-primary form-submit-btn" %></th>
      </tr>

      <tr>
        <th><%= link_to "戻る", :back, class:"btn btn-link account-back-button" %></th>
      </tr>
      </div>

    <% end %>
    </table>

    </div>
  </div>
</div>




