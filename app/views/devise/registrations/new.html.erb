

<div class= "signup_page">
  
  <div class = "signupHeader">
    <p>新しいアカウントを作成</p>
  </div>

  <div class = 'container'>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <table>
      <div class = "form-group col-xs-4">
      <tr>
        <th><label><span class = "must">必須</span></label></th>
        <td><%= f.text_field :name, class: "form-control-sm", placeholder: "ユーザー名"%></td>
      </tr>
      </div>

      <div class="form-group col-xs-4">
      <tr>
        <th><label><span class = "must">必須</span></label></th>
        <td><%= f.email_field :email, class: "form-control-sm", placeholder: "メールアドレス",autocomplete: "email" %></td>
      </tr>
      </div>
    
      <div class="form-group col-xs-4">
      <tr>
        <th><label><span class = "must">必須</span></label></th>
        <td><%= f.password_field :password, class: "form-control-sm", placeholder: "パスワード", autocomplete: "new-password" %></td>
      </tr>
      </div>
    
      <div class="form-group col-xs-4">
      <tr>
        <th><label><span class = "must">必須</span></label></th>
        <td><%= f.password_field :password_confirmation, class: "form-control-sm", placeholder: "パスワード確認用", autocomplete: "new-password" %></td>
      </tr>
      </div>
    </table>

    <div class="actions">
      <%= f.submit "新しいアカウントを作成", class: "btn btn-primary btn-block make_new_account" %>
    </div>
    
    <div class ="lead_login">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
<% end %>



